<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_app"
              android:orientation="vertical">

    <include layout="@layout/top_navigation"/>

    <ScrollView
        android:id="@+id/syssetting_dd_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/syssetting_ll_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_search_title"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="50dp" >

                <ImageView
                    android:id="@+id/sysinfo_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bg_sysinfo_logo" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/bg_sysinfo_mobile"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/bg_search_bottom" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="80dp"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/page_label_big"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sys_version" />

                    <TextView
                        android:id="@+id/syssetting_dd_tv_update"
                        style="@style/page_label_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/sys_version1"
                        android:textSize="19sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="80dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/ico_line" />

                <!--终端追溯轻松查-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="80dp"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical" >

                    <TextView
                        style="@style/page_label_big"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="终端追溯轻松查：" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/ico_item" />

                        <TextView
                            style="@style/listview_tv_item_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="工作前可添加好目标终端群，拜访过程更方便" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/ico_item" />

                        <TextView
                            style="@style/listview_tv_item_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="目的更明确，查我品、查竞品、查指标目标终端一键添加" />
                    </LinearLayout>

                </LinearLayout>
                <!--追溯项目随意配-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="80dp"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical" >

                    <TextView
                        style="@style/page_label_big"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="追溯项目随意配：" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/ico_item" />

                        <TextView
                            style="@style/listview_tv_item_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="拜访前可以对拜访的目标终端稽查的项目随意配置，想查哪些配哪些" />
                    </LinearLayout>


                </LinearLayout>
                <!--工作考勤有排名-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="80dp"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical" >

                    <TextView
                        style="@style/page_label_big"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="工作考勤有排名：" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/ico_item" />

                        <TextView
                            style="@style/listview_tv_item_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="考勤打卡，工作内容都会在大区维度进行排名" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/ico_item" />

                        <TextView
                            style="@style/listview_tv_item_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="设置三个冠军榜：稽查冠军、走访冠军、库存盘点冠军" />
                    </LinearLayout>

                </LinearLayout>
                <!--整改计划有提醒-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="80dp"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical" >

                    <TextView
                        style="@style/page_label_big"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="整改计划有提醒：" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/ico_item" />

                        <TextView
                            style="@style/listview_tv_item_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="时刻提醒今七日待复查的计划，同时提示上一个计划是否复查通过" />
                    </LinearLayout>


                </LinearLayout>
                <!--工作记录更清晰-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="80dp"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical" >

                    <TextView
                        style="@style/page_label_big"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="工作记录更清晰：" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/ico_item" />

                        <TextView
                            style="@style/listview_tv_item_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="工作记录分为：工作计划、工作汇总、基础数据群、我品铺货数据群、我品价格数据群、促销活动数据群、追溯竞品数据群、经销商库存" />
                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                     />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
